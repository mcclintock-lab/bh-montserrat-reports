      <h4>Connectivity</h4>
      <table>
        <thead>
          <tr>
            <td>Zone Name</td>
            <td>Distance to Nearest Zone (km)</td>
            <td>Nearest Zone Name</td>
          </tr>
        </thead>
        <tbody>
          {{#connectivity}}
            <tr>
              <td>{{NAME}}</td>
              <td>{{DIST_KM}}</td>
              <td>{{NEAR_NAME}}</td>
            </tr>
          {{/connectivity}}
      </table>
   </div>
 {{/isCollection}}




